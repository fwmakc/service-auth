<!DOCTYPE html>
<%- include('partials/head.ejs') %>
<body>
    <div class="form">
        <form action="<%= prefix %>/auth/change/<%= query.code %>" method="post">
            <h3><%= title %></h3>
            <div class="form-group">
                <input
                    class="form-control item"
                    id="username"
                    name="username"
                    placeholder="Email"
                    required
                    type="email"
                    value="<%= query.username %>"
                >
            </div>
            <div class="form-group">
                <input
                    class="form-control item"
                    id="password"
                    minlength="6"
                    name="password"
                    placeholder="Новый пароль"
                    required
                    type="password"
                    value="<%= query.password %>"
                >
            </div>
            <%- include('partials/errors.ejs') %>
            <%- include('partials/button.ejs', {button: 'Сменить пароль'}) %>
        </form>
        <div class="bottom">
            Вспомнили пароль?
            <%- include('partials/auth.ejs') %>
        </div>
    </div>
</body>
</html>