<!DOCTYPE html>
<html>
<%- include('partials/head.ejs') %>
<body>
    <div class="form">
        <form action="/forms/confirm" method="post">
            <h3><%= title %></h3>
            <div class="form-group">
                <input
                    class="form-control item"
                    id="code"
                    name="code"
                    placeholder="Код подтверждения"
                    required
                    type="text"
                    value="<%= query.code %>"
                >
            </div>
            <%- include('partials/errors.ejs') %>
            <%- include('partials/button.ejs', {button: 'Подтвердить регистрацию'}) %>
        </form>
        <div class="bottom">
            Уже подтвержден?
            <%- include('partials/auth.ejs') %>
        </div>
    </div>
</body>
</html>