<div style="
    font-family: Helvetica, Arial, sans-serif;
    font-weight: 400;
    font-style: normal;
    width: auto;
    padding: 50px;
    background: #eee;
    text-align: center;
">
    <div style="
        padding: 50px 50px 25px;
        border-radius: 10px;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        display: inline-block;
        width: 50%;
        min-width: 250px;
    ">
        <h3>{{ data.title }}</h3>
        <div>
            {{ data.description }}
        </div>
        <div style="
            padding-top: 20px;
        ">
            {{> button}}
        </div>
    </div>
</div>
